<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<addon id="service.tvtumbler" name="TvTumbler" version="0.0.5"
	provider-name="Bricky">
	<requires>
		<import addon="xbmc.python" version="2.1.0" />
		<import addon="xbmc.gui" version="4.0.0" />
		<import addon="xbmc.addon" version="12.0.0" />
		<import addon="script.module.simplejson" version="2.0.10" />
		<import addon="script.module.requests" version="1.1.0" />
		<import addon="script.module.elementtree" version="1.2.7" />
		<import addon="script.module.feedparser" version="5.1.2" />
	</requires>
	<extension point="xbmc.python.script" library="script.py">
		<provides>video executable</provides>
	</extension>
	<extension point="xbmc.service" library="service.py" start="startup" />
	<extension point="xbmc.addon.repository" name="TvTumbler addon repository">
		<info compressed="false">http://repo.tvtumbler.com/addons.xml</info>
		<checksum>http://repo.tvtumbler.com/addons.xml.md5</checksum>
		<datadir zip="true">http://repo.tvtumbler.com</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<platform>all</platform>
		<language />
		<summary lang="en">PVR For Torrents</summary>
		<description lang="en">Automatically download new episodes of
			followed TV shows as they air.
		</description>
		<disclaimer lang="en">It is your responsibility to comply with
			all legal and copyright requirements in your country.
		</disclaimer>
		<license>GNU GENERAL PUBLIC LICENSE. Version 3, 29 June 2007</license>
		<source>https://github.com/bricky/xbmc-addon-tvtumbler</source>
		<email>xbmc-addon@tvtumbler.com</email>
	</extension>
</addon>